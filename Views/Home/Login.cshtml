
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/custom")


<div class="row login-container">
    <div class="col-md-6 login-form">
        <h2 class="mb-3"></h2>
        <p class="text-muted">Welcome back! Please enter your details.</p>
        <form id="loginForm">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="email" id="loginEmail" name="username" class="form-control" placeholder="Enter your Username">
                <small id="lblUsernameError"></small>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" id="loginPassword" name="password" class="form-control" placeholder="********">
                <small id="lblPasswordError"></small>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <input id="cbRemember" type="checkbox"> Remember me
                </div>
                <a href="#" id="lnkForgotPassword" class="text-decoration-none">Forgot password?</a>
            </div>
            <button type="button" id="btnSignIn" class="btn btn-danger w-100">Sign in</button>
            <button type="button" class="btn btn-google w-100 mt-2">
                <img src="https://img.icons8.com/color/16/000000/google-logo.png" class="me-2"> Sign in with Google
            </button>
            <p class="text-center mt-3">Don't have an account? <a href="#" id="lnkRegister" class="text-danger">Sign up for free!</a></p>
        </form>
    </div>
    <div class="col-md-6 login-image"></div>
</div>



<div class="row registration-container hidden">
    <div class="col-md-5 registration-form">
        <h2 class="mb-3"></h2>
        <p class="text-muted">New User ?! Please fill-in your details.</p>
        <form id="registrationForm">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" id="regUsername" name="username" class="form-control" placeholder="enter your username">
                <small id="lblRegUsernameError"></small>
            </div>

            <div class="mb-3">
                <label class="form-label">Contact No</label>
                <input type="text" id="regMobileNo" name="MobileNo" class="form-control" placeholder="enter your contact number">
                <small id="lblRegContactError"></small>
            </div>

            <div class="mb-3">
                <label class="form-label">Email </label>
                <input type="email" id="regEmailID" name="username" class="form-control" placeholder="enter your email">
                <small id="lblRegEmailError"></small>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" id="regPassword" name="password" class="form-control" placeholder="create your password">
                <small id="lblRegPasswordError"></small>
            </div>
            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password" id="regCPassword" name="confirmpassword" class="form-control" placeholder="confirm your created password">
                <small id="lblRegCPasswordError"></small>
            </div>
