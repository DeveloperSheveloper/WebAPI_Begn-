
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/custom")


<div class="row login-container">
    <div class="col-md-6 login-form">
        <h2 class="mb-3">WELCOME BACK</h2>
        <p class="text-muted">Welcome back! Please enter your details.</p>
        <form>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" placeholder="********">
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <input type="checkbox"> Remember me
                </div>
                <a href="#" class="text-decoration-none">Forgot password?</a>
            </div>
            <button type="submit" class="btn btn-danger w-100">Sign in</button>
            <button type="button" class="btn btn-google w-100 mt-2">
                <img src="https://img.icons8.com/color/16/000000/google-logo.png" class="me-2"> Sign in with Google
            </button>
            <p class="text-center mt-3">Don't have an account? <a href="#" class="text-danger">Sign up for free!</a></p>
        </form>
    </div>
    <div class="col-md-6 login-image"></div>
</div>

